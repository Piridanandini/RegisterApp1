<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.welcome.registerapp.PlannerActivity"
    android:background="#000"
    android:orientation="horizontal">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/flu"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginTop="20dp"
       >


        <ImageButton
            android:layout_width="50dp"
            android:id="@+id/PlannerBack"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-100dp"
            android:background="@color/flu"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Planner"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="0dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />












    </android.support.v7.widget.Toolbar>






    <FrameLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-370dp">



        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollViewplan"
            android:scrollbars="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/Geo_card"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_margin="40dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="GEO-FENCE ALERTS"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Get on-time alerts to when users are entering or leaving pre-defined zones, such as a school, place of work, home, or any other area you designate"
                        android:textSize="10dp"/>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/Driving_card"
                    android:layout_width="300dp"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_height="100dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="-340dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="DRIVING BEHAVIOR"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Discover if the user is speeding or participating in other bad driving behaviors, and help correct it by presenting them with the proper information"
                        android:textSize="10dp"/>


                </android.support.v7.widget.CardView>





                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="@color/grey"
                    android:id="@+id/fuel_card"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="260dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="FUEL MONITORING"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="you can also use this GPS vehicle tracking software to see how much fuel is being used and how much is left, helping you to prepare for your trips better"
                        android:textSize="10dp"/>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/Sensors_card"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="370dp"

                    app:cardCornerRadius="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="ADDED SENSORS"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="With extra sensors, you can enable the GPSWOX tracking system to extend all of its already incredible feature-list, including adding camera sensors, alarms and more"
                        android:textSize="10dp"/>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/History_card"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="480dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="HISTORY AND REPORTS"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="This powerful GPS tracking system will allow you to view history and reports, which is great for business use and private use as well"
                        android:textSize="10dp"/>


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>